<section id="consultation_form_3_section" class="newsletter mt-0 pt-0 mb-0 pb-5 bg-gray">
    <div class="newsletter">
        <div class="container text-center justify-content-center px-0">
            <div class="form-holder">
                <span class="text-dark h2">Опишите вашу ситуацию и узнайте процент вашей гарантии</span>
                <form id="consultation_form_3" method="post">
                    <input type="hidden" name="event" value="country_form_1">
                    <input type="hidden" name="event" value="consultation_form">
                    <input type="hidden" name="type" value="application">
                    <input type="hidden" name="geo" value="{{ geo }}">
                    <input type="hidden" name="host" value="{{ geo.host }}">

                    <div class="form-group  justify-content-center text-center">
                        <table class="margin-auto">
                            <tr class="row">
                                <td>
                                    <div class="col-lg-4">
                                        <input type="text" name="country" placeholder="Страна посещения" required pattern="[A-zА-я]{3,}[A-zА-я-\s]*" >
                                    </div>
                                </td>
                            </tr>
                            <tr class="row">
                                <td>
                                    <div class="col-lg-4">
                                        <input  type="text" name="phone" pattern="[\+]*[0-9]{6,}$" placeholder="Ваш телефон" required>
                                    </div>

                                </td>
                            </tr>
                            <tr class="row">
                                <td>
                                    <div class="col-lg-4 mt-1">
                                        <button type="submit" class="btn btn-success submit"><span>Отправить заявку</span></button>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
