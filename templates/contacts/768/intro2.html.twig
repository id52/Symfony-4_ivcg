<section id="contacts_intro_2">
    {% include '768/direction.html.twig' %}
    <div class="container-fluid justify-content-center text-center align-content-center bg-contacts">
        <div class="container justify-content-center text-center align-content-center">
        <table width="100%" class=" m-0 p-0">
            <tr>
                <td class="h2 text-dark text-left m-0 p-0">
                    Получите всю<br>
                    необходимую контактную<br>
                    информацию о наших<br>
                    офисах в России!
                </td>
                <td class="text-left">
                    <img class="mt-5" src="/img/contacts/map.png">
                </td>
            </tr>
        </table>


            <div class="newsletter">
                <div class="container text-left justify-content-center">
                    <div class="form-holder">
                        <span class="text-dark h2">Получить бесплатную консультацию</span>
                        <form id="consultation_form_1" method="post">
                            <input type="hidden" name="event" value="consultation_form_contacts">
                            <input type="hidden" name="type" value="contacts">
                            {% if geo is defined %}
                                <input type="hidden" name="geo" value="{{ geo }}">
                                <input type="hidden" name="host" value="{{ geo.host }}">
                            {% endif %}


                            <div class="form-group  justify-content-center text-center">
                                <table>
                                    <tr class="row">
                                        <td>
                                            <div class="col-lg-4">
                                                <input type="text" name="name" placeholder="Ваше имя" required pattern="[A-zА-я]{3,}[A-zА-я-\s]*" >
                                            </div>
                                        </td>
                                        <td>
                                            <div class="col-lg-4">
                                                <input  type="text" name="phone" pattern="[\+]*[0-9]{6,}$" placeholder="Ваш телефон" required>
                                            </div>

                                        </td>
                                        <td>
                                            <div class="col-lg-4 mt-1">
                                                <button type="submit" class="btn btn-success submit"><span>Отправить заявку</span></button>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>



    </div> <!-- //container -->
    </div> <!-- //container -->
</section><!-- #contacts_intro -->
