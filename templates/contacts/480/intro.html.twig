<section id="contacts_intro"  class="py-0">
        {#{% include '768/direction.html.twig' %}#}
    <div class="container-fluid m-0 p-0">
        <table width="100%" class="bg-contacts m-0 p-0">
            <tr>
                <td width="" class="m-0 p-0 bg-office">
                    <div class="title text-left">
                        <span class="h2 text-left">Наши контакты</span><br>
                        <span class="h3 text-left">Доверьтесь опыту профессионалов!</span>
                    </div>
                </td>
                <td class="text-left">
                    <form id="consultation_form_contacts_1" action="#"
                          class="form text-center align-items-center justify-content-center ml-5" method="post">
                        <input type="hidden" name="event" value="callback_modal_form">
                        <input type="hidden" name="type" value="contacts">
                        {% if geo is defined %}
                            <input type="hidden" name="geo" value="{{ geo }}">
                            <input type="hidden" name="host" value="{{ geo.host }}">
                        {% endif %}

                        <span class="form_title_1 text-left text-white">Получить бесплатную<br> консультацию</span><br><br>
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Ваше имя" required pattern="[A-zА-я]{3,}[A-zА-я-\s]*" >

                            <input class="mt-3" type="text" name="phone" pattern="[\+]*[0-9]+" placeholder="Ваш телефон" required>
                            <button type="submit" class="mt-3 btn btn-success submit">Отправить заявку</button>
                        </div>
                    </form>
                </td>
            </tr>
        </table>
    </div> <!-- //container -->
</section><!-- #contacts_intro -->
