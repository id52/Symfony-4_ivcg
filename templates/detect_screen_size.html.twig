<html>
<script src="/js/jquery-2.2.4.min.js?{{ revision }}"></script>
<script>
    $.ajax({
        async: false,
        type: 'get',
        url: '/get-screen-width',
        cache: false,
        data: {'width': screen.width},
        success: function (data) {
            width = data;
            $.post( "/set-screen-width", {'width': screen.width}, function( data ) {
                window.location.reload();
            })
        },
        error: function (data) {
        },
    });
</script>
</html>