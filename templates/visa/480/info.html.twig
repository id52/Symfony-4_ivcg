<section id="info" class="bg-gray mb-0 pb-5 pt-5">
    <div class="container justify-content-center text-center align-content-center ">
        <header class="text-center no-margin-bottom">
            <h2 class="text-dark">
                <span>{{ visa.infoMainTitle }}</span>
            </h2>
            <span class="h3 text-dark mt-4">{{ visa.infoSubTitle }}</span>
        </header>


        <div class="mt-3">
            {% for row in visa.infos|batch(3) %}
                <table class="mt-1" style="margin-left: auto; margin-right: auto">
                    <tr>
                        {% for info in row %}
                            <td class="px-3 py-3 ">
                                <div class="info-box margin-auto">
                                    <div class="info-box-header">

                                        <hr class="info-box-hr">
                                        <div class="info-box-title text-left">
                                            {{ info.title|raw }}
                                        </div>

                                        <div class="info-box-body text-center pt-3 pl-3" >

                                            <table class="w150px mt-0 valign-top">
                                                <tr>
                                                    <td class="align-top text-left">
                                                        <i class="fa fa-database mr-1"></i>
                                                    </td>
                                                    <td class="text-left text-dark">
                                                        {{ info.fees }}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="align-top">
                                                        <i class="fa fa-clock-o mr-1"></i>
                                                    </td>
                                                    <td class="text-left text-dark">
                                                        Сроки: {{ info.term }}
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>

                                    </div>

                                    <div class="info-box-footer text-center align-content-center">
                                        <div class="info-box-price">
                                            {{ info.price|raw }}
                                            {% if '$' not in info.price %}
                                                ₽
                                            {% endif %}
                                        </div>
                                        <div class="info-box-button">
                                            <a class="btn text-white get-country-consultation href my-4 btn-success "
                                               data-country="{{ visa }}">
                                                <span>Получить визу</span>
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            </td>

                        {% endfor %}
                    </tr>
                </table>
            {% endfor %}
        </div>

    </div>
</section>

